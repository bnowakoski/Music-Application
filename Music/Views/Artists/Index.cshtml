
@model IEnumerable<Music.Models.Artist>

@{
    ViewBag.Title = "Artist";
}

<h2>Artist</h2>
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New Artist", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
    </tr>
   @foreach (var item in Model)
   {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ArtistID })
        </td>
        <td>
            @Html.ActionLink("Albums", "SortByArtist", new { id = item.ArtistID })
        </td>
    </tr>
   }
</table>